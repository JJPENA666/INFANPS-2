    /*  BOTONES  */

    #boton {
        text-align: right;
    }

    #boton button {
        position: absolute;
        font-family: 'Roboto';
        font-weight: 700;
        background-color: #88BBCC;
        /* Color celeste pastel */
        border: none;
        border-radius: 5%;
        color: rgb(39, 39, 39);
        /* Color del texto */
        width: 15%;
        height: 5%;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
