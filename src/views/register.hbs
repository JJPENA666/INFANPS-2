<div id="contenedor">

    <!--    FOGURAS DE FONDO     !-->
    <div id="figuras">


        <!--    TITULO DEL FORMULARIO     !-->
        <div id="titulo">Registrarse<br></div>
        <div id="icono">
            <img src="/img/usuario.png">
        </div>
    </div>
    <!--    FORMULARIO DE DATOS     !-->
    <form action="/register" method="POST">
        <div id="formulario">
            <div id="username">
                <i class="fa fa-user-o" aria-hidden="true"></i><input type="text" name="username"
                    placeholder="Nombre de Usuario:" value="{{username}}">
            </div>
            <br><br>
            <div id="password">
                <i class="fa fa-unlock-alt" aria-hidden="true"></i><input type="text" name="password"
                    placeholder="Contraseña:" value="{{password}}">
            </div>
            <br><br>
            <div id="lastName">
                <i class="fa fa-user-o" aria-hidden="true"></i><input type="name" name="lastName"
                    placeholder="Apellido:" value="{{lastName}}">
            </div>
            <br><br>
            <div id="email">
                <i class="fa fa-envelope-o" aria-hidden="true"></i><input type="email" name="email"
                    placeholder="Correo Electrónico:" value="{{contraseña}}">
            </div>
            <br><br>
            <div id="phone">
                <i class="fa fa-thin fa-phone" aria-hidden="true"></i><input type="phone" name="phone"
                    placeholder="Teléfono:" value="{{phone}}">
            </div>
            <br>
        </div>
        <br><br>
        <!--    BOTON Y ENLACE     !-->
        <div id="boton">
            <button class="boton-celeste">Registro</button>
            <div id="enlace">
                <a href="/login">Ya tienes una cuenta?</a>
            </div>
        </div>
    </form>
</div>
