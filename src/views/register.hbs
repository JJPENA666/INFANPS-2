    #enlace a {
        color: #153047;
        opacity: 0.8;
    }


    /* Estilos responsivos */
    @media (max-width: 768px) {

        /* Contenedor general */
        #contenedor {
            width: 80%;
            margin-left: 5%;
            padding: 5% 0;
        }

        /* Títulos y texto */
        #titulo {
            font-size: 24px;
            text-align: center;
            margin-left: 15%;
            margin-top: 6%;
        }

        #icono {
