<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Usuario</title>
    <!-- Agrega tus estilos CSS aquí -->
    
</head>
<body>
    <h1>Editar Usuario</h1>
   <form action="/users/{{ user.dataValues.id }}/editar" method="POST">
    <input type="hidden" name="_method" value="PUT"> <!-- Esto indica que la solicitud es de tipo PUT -->

    <label for="username">Nombre de Usuario:</label>
    <input type="text" id="username" name="username" value="{{ user.dataValues.username }}">

    <label for="password">Contraseña:</label>
    <input type="password" id="password" name="password" >

    <label for="name">Nombre:</label>
    <input type="text" id="name" name="name" value="{{ user.dataValues.name }}">

    <label for="lastName">Apellido:</label>
    <input type="text" id="lastName" name="lastName" value="{{ user.dataValues.lastName }}">

    <label for="email">Correo Electrónico:</label>
    <input type="email" id="email" name="email" value="{{ user.dataValues.email }}">

    <label for="phone">Teléfono:</label>
    <input type="tel" id="phone" name="phone" value="{{ user.dataValues.phone }}">

    <button type="submit">Actualizar</button>
    
    <button type="cancel" href="/users/{{user.dataValues.id}}">Cancelar</button>
</form>

</body>
</html>
   <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin-left: auto;
            margin-right: auto;
            padding: 0;
            width: 500px;
            justify-content: center;
            align-items: center;
            height: 500px;
        }
        
        .container {
            max-width: 400px;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: right;
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="password"],
        input[type="email"],
        input[type="tel"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 3px;
            box-sizing: border-box;
        }

        button[type="submit"] {
            background-color: #6396ad;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 3px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
            transition: background-color 0.3s;
        }
        button[type="cancel"] {
            background-color: #a30008;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 3px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
            transition: background-color 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #516f7a;
        }
        button[type="cancel"]:hover {
        background-color: #a74848;
        }
    </style>